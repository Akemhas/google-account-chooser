{
  "manifest_version": 3,
  "name": "Google Account Chooser Redirect",
  "version": "1.3",
  "description": "Automatically open Google Docs/Drive links with account chooser.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}